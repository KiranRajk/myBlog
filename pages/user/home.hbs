    <h1>Home page</h1>

<div class="container d-flex gap-1">
    {{#each data}}
  <div class="card" style="width: 18rem; ">
    <a style=" text-decoration : none; " href="/detailedView?id={{this._id}}">
    <img src="uploads/{{this.images.[0].filename }}" class="card-img-top"   alt="...">
    <div class="card-body">
      <h5 class="card-title">{{ this.heading}}</h5>
      <p class="card-text">{{this.content }}</p>
      <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
    </a>
  </div>
     {{/each}}

</div>

<section class="container">
