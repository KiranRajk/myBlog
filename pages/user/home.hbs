{{!-- ContentBlog --}}
<section id="blogContent">
<div class="container mx-auto d-flex gap-3 row-gap-3 row justify-content-center">
    {{#each data}}
  <div class="card col-lg-4 col-md-6 " style="width: 18rem; height: 23rem; ">
    <a style=" text-decoration : none; " href="/detailedView?id={{this._id}}">
    <img src="uploads/{{this.images.[0].filename }}" class="card-img-top  img-fluid"  alt="...">
    <div class="card-body">
      <h5 class="card-title fw-medium" style="color: #A4907C;">{{ this.heading}}</h5>
      <p class="card-text monospace " style="color: #C8B6A6;">{{this.content }}</p>
      <a  class="btn" href="/detailedView?id={{this._id}}">Read more...</a>
    </div>
    </a>
  </div>
     {{/each}}

</div>
</section>
